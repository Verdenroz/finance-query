# Server Configuration
PORT=8000

# Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Options: json, text
LOG_FORMAT=json

# Redis Cache (optional)
# REDIS_URL=redis://localhost:6379

# Rate Limiting
# Requests per minute (default: 60 requests/minute = 1 req/sec)
RATE_LIMIT_PER_MINUTE=60

# API Defaults
DEFAULT_INTERVAL=1d    # Options: 1m, 5m, 15m, 30m, 1h, 1d, 1wk, 1mo, 3mo
DEFAULT_RANGE=1mo      # Options: 1d, 5d, 1mo, 3mo, 6mo, 1y, 2y, 5y, 10y, ytd, max

# Default Query Limits
RECOMMENDATIONS_LIMIT=5
SEARCH_HITS=6
SCREENERS_COUNT=25

# SEC EDGAR Integration (optional)
# Contact email required by SEC - included in User-Agent header
# Leave commented out to disable EDGAR endpoints
# EDGAR_EMAIL=user@example.com

# FRED API Integration (optional)
# Free API key from https://fred.stlouisfed.org/docs/api/api_key.html
# Leave commented out to disable /v2/fred/* endpoints
# Note: If running a public server, your terms of use must state that users are bound
# by the FRED API Terms of Use: https://fred.stlouisfed.org/docs/api/terms_of_use.html
# FRED_API_KEY=your_fred_api_key_here
